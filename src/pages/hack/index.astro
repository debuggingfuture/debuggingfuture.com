---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("hack")).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.post-card * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			.post-card:first-child img {
				width: 100%;
			}
			.post-card:first-child .title {
				font-size: 2.369rem;
			}
			.post-card img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			.post-card a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.post-card a:hover h4,
			.post-card a:hover .date {
				color: rgb(var(--accent));
			}
			.post-card a:hover img {
				box-shadow: var(--box-shadow);
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto">
			<section>
				<div class="flex flex-wrap gap-8 lg:gap-6">
					{
						posts.map((post, index) => (
							<div class={`post-card flex-shrink-0 w-full ${index === 0 ? ' mb-4 text-center' : ''}`}>
								<a href={`/hack/${post.id}/`}>
									{post.data.thumbnail && (
										<Image width={720} height={360} src={`/src/content/hack/${post.id}/${post.data.thumbnail}`} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										{/* <FormattedDate date={post.data.date} /> */}
									</p>
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
